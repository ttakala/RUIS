<input xmlns="http://ruisystem.net/inputcfg"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://ruisystem.net/inputcfg inputcfg.xsd">
    <!-- It is possible to have any number of wand instances.
         The wiimoteID, skeletonID, and PSMoveID indices start from 0 (zero).
         Similarly, the wand instances will get their ID from the
         order in which they appear on this list, starting from 0.           -->
    <wands>            
        <Mouse          selection="buttonLeft"                            />
        <Skeleton skeletonID="0" bodyPart="rightHand" selection="holdAbove" 
                                                      release="throw" />
        <Skeleton skeletonID="0" bodyPart="leftHand"  selection="holdAbove" 
                                                      release="throw" />
        <Skeleton skeletonID="1" bodyPart="rightHand" selection="holdAbove" 
                                                      release="throw" />
        <Skeleton skeletonID="1" bodyPart="leftHand"  selection="holdAbove" 
                                                      release="throw" />
      <!--                       
        <PSMove   psmoveID="0" selection="buttonTrigger"                />
        <PSMove   psmoveID="1" selection="buttonTrigger" followsCamera="false"/>
        <Wiimote  wiimoteID="0"                                           />
        <Wiimote  wiimoteID="1" selection="buttonB"                       />
      -->
    </wands>

    <headTracking enabled="true">
        <Skeleton skeletonID="0"/>
        <PSMove psmoveID="0"/>
    </headTracking>
    <!-- Only first head tracker is taken into account in this version -->

    <sensors>
      <!-- UNCOMMENT THE BELOW LINE TO USE KINECT
        <Kinect floorDetection="false"  trackedSkeletons="2"  yawOffset="0.0" />
           UNCOMMENT THE ABOVE LINE TO USE KINECT   -->
        <PSEye calibrateSamples="50" yawOffset="0.0" />
    </sensors>

    <network>      
      <!-- UNCOMMENT THE BELOW LINE TO USE PS MOVE
        <MoveMe address="130.233.46.216" localPort="5566" remotePort="7899"/>
           UNCOMMENT THE ABOVE LINE TO USE PS MOVE   -->
        <GlovePIE  address="127.0.0.1" localPort="7400" remotePort="8000" />
        <OSCserver address="127.0.0.1" localPort="9500" remotePort="12000" />
    </network>
    <!-- GlovePIE is used to handle Wiimote connections. -->

</input>

